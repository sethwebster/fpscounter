{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "../src"
  },
  "include": ["../src/*", "../src/**/*"],
  "exclude": ["node_modules"]
}